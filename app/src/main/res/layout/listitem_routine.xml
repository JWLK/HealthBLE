<?xml version="1.0" encoding="utf-8"?>
<FrameLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="70dp"
    android:background="@color/colorWhite"
    android:paddingVertical="0dp"
    android:paddingHorizontal="0dp">

<LinearLayout
    android:orientation="horizontal"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_weight="1">

    <ImageView
        android:id="@+id/routine_image"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:src="@drawable/ic_baseline_fitness_center_48_white"
        android:scaleType="fitCenter"
        android:background="@color/colorDarkBlue"
        android:padding="5dp"
        android:layout_marginVertical="10dp"
        android:layout_marginHorizontal="15dp"/>

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:paddingVertical="10dp">

        <TextView
            android:id="@+id/routine_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Only 덤벨프레스"
            android:textSize="18sp"
            android:textColor="@color/colorBlack"
            android:layout_marginVertical="5dp"
            android:fontFamily="@font/nanum_square_regular"/>

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginVertical="0dp"
            android:gravity="center_vertical">

            <ImageView
                android:layout_width="13dp"
                android:layout_height="13dp"
                android:src="@drawable/ic_running"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="포함된 운동수 :"
                android:textSize="12sp"
                android:textColor="@color/colorGray80"
                android:layout_marginHorizontal="3dp"
                android:fontFamily="@font/nanum_square_regular"/>
            <TextView
                android:id="@+id/routine_counter"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="1"
                android:textSize="12sp"
                android:textColor="@color/colorDarkBlue"
                android:layout_marginHorizontal="3dp"
                android:fontFamily="@font/nanum_square_bold"/>

            <Space
                android:layout_width="10dp"
                android:layout_height="match_parent"/>

            <ImageView
                android:layout_width="13dp"
                android:layout_height="10dp"
                android:src="@drawable/ic_clock"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="총 소요시간:"
                android:textSize="12sp"
                android:textColor="@color/colorGray80"
                android:layout_marginHorizontal="3dp"
                android:fontFamily="@font/nanum_square_regular"/>
            <TextView
                android:id="@+id/routine_timer"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="00:10:35"
                android:textSize="12sp"
                android:textColor="@color/colorDarkBlue"
                android:layout_marginHorizontal="3dp"
                android:fontFamily="@font/nanum_square_bold"/>
        </LinearLayout>


    </LinearLayout>

</LinearLayout>

</FrameLayout>
