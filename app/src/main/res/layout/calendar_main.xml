<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true"
    android:gravity="center"
    android:background="@color/colorMainBackground">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:background="@color/colorWhite"/>

        <!-- Main Top Title Section -->
        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="80dp"
            android:background="@color/colorWhite">
            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingVertical="15dp"
                android:paddingHorizontal="20dp">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="운동 기록"
                    android:textSize="32sp"
                    android:textColor="@color/colorActiveBlue"
                    android:fontFamily="@font/nanum_square_regular"/>

            </FrameLayout>

        </LinearLayout>

        <!-- Contents Section -->
        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <CalendarView
                android:id="@+id/calendar_view"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/colorWhite"
                android:theme="@style/CalenderViewCustom"
                android:dateTextAppearance="@style/CalenderViewDateCustomText"
                android:weekDayTextAppearance="@style/CalenderViewWeekCustomText"/>



        </LinearLayout>

        <!-- EMG Section -->
        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/colorWhite"
            android:layout_marginVertical="10dp">

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingVertical="10dp"
                android:paddingHorizontal="20dp"
                android:gravity="center_vertical">

                <TextView
                    android:id="@+id/calendar_date"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:layout_marginVertical="2dp"
                    android:text="2020.07.21"
                    android:textSize="24sp"
                    android:textColor="@color/colorDarkBlue"
                    android:fontFamily="@font/nanum_square_bold"/>
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">
                    <Button
                        android:id="@+id/button_add_record"
                        android:layout_width="match_parent"
                        android:layout_height="40dp"
                        android:background="@color/colorMainBackground"
                        android:paddingHorizontal="15dp"
                        android:text="운동기록 추가하기"
                        android:textSize="14sp"
                        android:textColor="@color/colorGray80"
                        android:fontFamily="@font/nanum_square_bold"/>

                </LinearLayout>

            </LinearLayout>

            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="200dp">

                <TextView
                    android:visibility="visible"
                    android:id="@+id/off_record"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:text="운동 기록 없음"
                    android:textSize="18sp"
                    android:gravity="center"
                    android:textColor="@color/colorGrayBE"
                    android:fontFamily="@font/nanum_square_bold"/>

                <FrameLayout
                    android:visibility="gone"
                    android:id="@+id/on_record"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">
                    <include
                        android:id="@+id/top"
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        layout="@layout/listitem_play_exercise" />
                </FrameLayout>


            </FrameLayout>

        </LinearLayout>

    </LinearLayout>

</ScrollView>