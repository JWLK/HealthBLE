<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true"
    android:background="@color/colorMainBackground">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:background="@color/colorWhite"/>

        <!-- Main Top Title Section -->
        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:background="@color/colorWhite">
            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingVertical="15dp"
                android:paddingHorizontal="20dp">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="트레이닝 홈"
                    android:textSize="32sp"
                    android:textColor="@color/colorActiveBlue"
                    android:fontFamily="@font/nanum_square_regular"/>

            </FrameLayout>

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:paddingVertical="0dp"
                android:paddingHorizontal="0dp">

                <com.google.android.material.tabs.TabLayout
                    android:id="@+id/tab_layout"
                    android:layout_width="100dp"
                    android:layout_height="wrap_content"
                    app:tabSelectedTextColor="@color/colorActiveBlue"
                    app:tabIndicatorColor="@color/colorActiveBlue"
                    app:tabIndicatorHeight="3dp">

                    <com.google.android.material.tabs.TabItem
                        android:id="@+id/method_tab"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="운동하기"/>

                    <!--                        <com.google.android.material.tabs.TabItem-->
                    <!--                            android:id="@+id/routine_tab"-->
                    <!--                            android:layout_width="wrap_content"-->
                    <!--                            android:layout_height="wrap_content"-->
                    <!--                            android:text="매거진" />-->

                </com.google.android.material.tabs.TabLayout>

            </LinearLayout>
        </LinearLayout>

        <!-- Tab Selected 0 -->
        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <!-- Device Control Section -->
            <LinearLayout
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="270dp"
                android:background="@color/colorWhite"
                android:layout_marginVertical="3dp">

                <LinearLayout
                    android:orientation="vertical"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingVertical="15dp"
                    android:paddingHorizontal="20dp">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginVertical="2dp"
                        android:text="기기관리"
                        android:textSize="24sp"
                        android:textColor="@color/colorDarkBlue"
                        android:fontFamily="@font/nanum_square_bold"/>

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginVertical="2dp"
                        android:text="오늘 하루도 힘차게 운동을 시작해 보세요!"
                        android:textSize="14sp"
                        android:textColor="@color/colorGray80"
                        android:lineSpacingExtra="5dp"
                        android:fontFamily="@font/nanum_square_regular"/>

                </LinearLayout>

                <LinearLayout
                    android:orientation="vertical"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingVertical="10dp"
                    android:paddingHorizontal="20dp">

                    <LinearLayout
                        android:orientation="vertical"
                        android:layout_width="match_parent"
                        android:layout_height="160dp"
                        android:background="@color/colorActiveBlue"
                        android:paddingVertical="5dp"
                        android:paddingHorizontal="10dp">

                        <LinearLayout
                            android:orientation="horizontal"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginVertical="5dp">

                            <LinearLayout
                                android:orientation="horizontal"
                                android:layout_width="0dp"
                                android:layout_height="match_parent"
                                android:layout_weight="1"
                                android:gravity="left"
                                android:paddingStart="15dp">

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="연결상태"
                                    android:textSize="10sp"
                                    android:textColor="@color/colorSubBlueL"
                                    android:layout_marginHorizontal="5dp"/>
                                <TextView
                                    android:id="@+id/device_connection_state"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="NaN"
                                    android:textSize="10sp"
                                    android:textColor="@color/colorSubBlueR"
                                    android:layout_marginHorizontal="5dp"/>


                            </LinearLayout>

                            <LinearLayout
                                android:orientation="horizontal"
                                android:layout_width="0dp"
                                android:layout_height="match_parent"
                                android:layout_weight="1"
                                android:gravity="end">

                                <TextView
                                    android:id="@+id/device_battery_text"
                                    android:visibility="visible"
                                    android:layout_width="wrap_content"
                                    android:layout_height="match_parent"
                                    android:text="NaN"
                                    android:textSize="10sp"
                                    android:textColor="@color/colorSubBlueL"
                                    android:layout_marginHorizontal="5dp"
                                    android:textAlignment="center"/>

                                <ImageView
                                    android:id="@+id/device_battery_image"
                                    android:layout_width="wrap_content"
                                    android:layout_height="match_parent"
                                    android:src="@drawable/ic_battery_empty"/>

                            </LinearLayout>


                        </LinearLayout>

                        <LinearLayout
                            android:orientation="horizontal"
                            android:layout_width="match_parent"
                            android:layout_height="0dp"
                            android:layout_weight="1">

                            <LinearLayout
                                android:layout_width="300dp"
                                android:layout_height="match_parent"
                                android:layout_weight="1"
                                android:background="#475CB8"
                                android:layout_marginBottom="10dp"
                                android:layout_marginHorizontal="20dp">
                                <ImageView
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent"
                                    android:src="@drawable/device_band"/>
                            </LinearLayout>

                            <LinearLayout
                                android:orientation="vertical"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:layout_weight="1">

                                <TextView
                                    android:id="@+id/device_name"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:text="IST Manage Band"
                                    android:textSize="18sp"
                                    android:textColor="@color/colorWhite"
                                    android:layout_marginVertical="0dp"/>

                                <TextView
                                    android:visibility="visible"
                                    android:id="@id/device_address"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:text="address"
                                    android:textSize="8sp"
                                    android:textColor="@color/colorSubBlueL"
                                    android:layout_marginBottom="10dp"/>

                                <LinearLayout
                                    android:orientation="horizontal"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_marginVertical="5dp">

                                </LinearLayout>

                                <Button
                                    android:id="@+id/button_realtime_view"
                                    android:layout_width="match_parent"
                                    android:layout_height="60dp"
                                    android:background="#475CB8"
                                    android:drawableStart="@drawable/ic_baseline_show_chart_24"
                                    android:paddingHorizontal="15dp"
                                    android:text="실시간 몸상태 확인"
                                    android:textSize="14sp"
                                    android:textColor="@color/colorWhite"
                                    android:fontFamily="@font/nanum_square_bold"/>


                           </LinearLayout>

                        </LinearLayout>

                    </LinearLayout>

                </LinearLayout>

            </LinearLayout>

            <!-- Routine Control Section -->
            <LinearLayout
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="200dp"
                android:background="@color/colorWhite"
                android:layout_marginVertical="3dp">

                <LinearLayout
                    android:orientation="vertical"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingVertical="15dp"
                    android:paddingHorizontal="20dp">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginVertical="2dp"
                        android:text="루틴 선택"
                        android:textSize="24sp"
                        android:textColor="@color/colorDarkBlue"
                        android:fontFamily="@font/nanum_square_bold"/>

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginVertical="2dp"
                        android:text="오늘은 어떤 운동을 하실 건강? \n루틴을 선택하고 운동을 시작해 보세요"
                        android:textSize="14sp"
                        android:textColor="@color/colorGray80"
                        android:lineSpacingExtra="5dp"
                        android:fontFamily="@font/nanum_square_regular"/>

                </LinearLayout>

                <LinearLayout
                    android:orientation="vertical"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingVertical="10dp"
                    android:paddingHorizontal="20dp">

                    <include
                        android:id="@+id/top"
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        layout="@layout/listitem_routine" />
                </LinearLayout>

            </LinearLayout>

            <!-- Start Button Section -->
            <Button
                android:id="@+id/start_exercise"
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:layout_marginVertical="30dp"
                android:background="@color/colorDarkBlue"
                android:text="운동 시작"
                android:textSize="24sp"
                android:textColor="@color/colorWhite"
                android:fontFamily="@font/nanum_square_regular"/>

        </LinearLayout>

    </LinearLayout>

</ScrollView>